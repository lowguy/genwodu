/* pages/blog/index.wxss */
.container {
    padding: 0.8rem 0;
}
.scroll-view_H{
    height: 3.8rem;
    box-shadow: 0rem 0.3rem 0.6rem #efefef;
}
.cate{
    width:3rem;
    height:3rem;
    display: inline-block;
    margin-right: 0.7rem; 
    margin-bottom: 0.8rem;   
}
.cate image{
    width:3rem;
    height:3rem;
}
.section{
    width: 98%;
    margin: 0 auto;
}
.item{
    display: block;
    width:100%;
    height:12rem;
    text-align: center;
    background-color: #fff;
    margin: 0.7rem 0;
    border: 0.1rem solid #efefef;
    box-shadow: 0rem 0.3rem 0.6rem #efefef;
}
.item .img{
    width:100%;
    height: 8rem;
}
.item .img image{
    width: 100%;
    height: 8rem;
}
.item .title{
    margin-top: 1rem;
    display: block;
    height: 2rem;
    line-height: 2rem;
    overflow: hidden
}